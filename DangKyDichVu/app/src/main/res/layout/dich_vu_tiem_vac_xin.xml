<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F4F6F9"
    android:padding="16dp"
    tools:context=".giaodien.DichVuTiemVacXin">

    <Spinner
        android:id="@+id/spn_trungtamtiemchung"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:backgroundTint="#0288D1"
        android:padding="8dp"
        android:background="@drawable/spinner_background" />

    <Spinner
        android:id="@+id/spn_loaivacxin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:backgroundTint="#0288D1"
        android:padding="8dp"
        android:background="@drawable/spinner_background" />

    <EditText
        android:id="@+id/edt_dongia"
        style="@style/TextStyle"
        android:enabled="false"
        android:hint="Đơn giá"
        android:textColor="#0288D1"
        android:background="@drawable/edittext_background"
        android:padding="12dp"
        android:layout_marginTop="12dp"
        android:textColorHint="#757575" />

    <TextView
        android:id="@+id/txt_ngaytiem"
        style="@style/LabelStyle"
        android:text="Ngày tiêm: "
        android:onClick="ChonNgay"
        android:textColor="#D81B60"
        android:textStyle="bold"
        android:padding="12dp"
        android:layout_marginTop="12dp"
        android:background="#FFE0E8"
        android:drawableEnd="@drawable/ic_calendar"
        android:drawableTint="#D81B60" />

    <EditText
        android:id="@+id/edt_sotien"
        style="@style/TextStyle"
        android:enabled="false"
        android:hint="Số tiền"
        android:textColor="#0288D1"
        android:background="@drawable/edittext_background"
        android:padding="12dp"
        android:layout_marginTop="12dp"
        android:textColorHint="#757575" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/btn_tinhtien"
            style="@style/ButtonStyle"
            android:onClick="TinhTien"
            android:text="Tính tiền"
            android:backgroundTint="#0288D1"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:layout_marginEnd="8dp"
            android:elevation="2dp" />

        <Button
            android:id="@+id/btn_dangky"
            style="@style/ButtonStyle"
            android:onClick="DangKy"
            android:text="Đăng ký"
            android:backgroundTint="#388E3C"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:layout_marginEnd="8dp"
            android:elevation="2dp" />

        <Button
            android:id="@+id/btn_dong"
            style="@style/ButtonStyle"
            android:onClick="DongActivity"
            android:text="Đóng"
            android:backgroundTint="#D32F2F"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:elevation="2dp" />
    </LinearLayout>
</LinearLayout>